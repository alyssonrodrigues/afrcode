<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd">

	<navigation from-action="#{acaoGestaoUsuarios.salvar}">
		<rule if-outcome="concluir">
			<redirect view-id="/pages/telaGestaoUsuarios.xhtml" />
		</rule>
	</navigation>

  <navigation from-action="#{acaoGestaoUsuarios.cancelar}">
    <rule if-outcome="concluir">
      <redirect view-id="/pages/telaGestaoUsuarios.xhtml" />
    </rule>
  </navigation>
  
  <!-- Restringindo o acesso a página ao usuários que possuam 
    o papel 'admin' ... -->
  <restrict>#{s:hasRole('admin')}</restrict>

</page>