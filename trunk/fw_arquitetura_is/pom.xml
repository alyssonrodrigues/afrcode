	<modelVersion>4.0.0</modelVersion>
	<groupId>afrcode.libs</groupId>
	<artifactId>fw_arquitetura_is</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>fw_arquitetura_is</name>

	<parent>
		<artifactId>fw_arquitetura_parent_pom</artifactId>
		<groupId>afrcode.poms</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<properties>
		<srv.instancia.desenvol>Sepas_desenvol</srv.instancia.desenvol>
		<srv.diretorio.desenvol>libs-tcu</srv.diretorio.desenvol>
		<skipTests>false</skipTests>
		<depsArqRef8Scope>compile</depsArqRef8Scope>
		<springVersion>3.1.1.RELEASE</springVersion>
		<springSecurityVersion>3.1.0.RELEASE</springSecurityVersion>
