<?xml version="1.0" encoding="ISO-8859-1"?>

<Context privileged="true" 
         antiResourceLocking="false" 
         antiJARLocking="false"
         path="/egos"
         reloadable="true"
         crossContext="true">

    <!-- Configuracos do pool de conexoes acessivel via JNDI ... -->
    <Resource type="org.hsqldb.jdbc.JDBCDataSource"
        name="datasources/egosdatasource"
        factory="org.hsqldb.jdbc.JDBCDataSourceFactory"
        database="jdbc:hsqldb:hsql://localhost/testesdb"
        user="sa" password=""/>

</Context>
