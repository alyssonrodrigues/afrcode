<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 1.3//EN"
       "http://struts.apache.org/dtds/tiles-config_1_3.dtd">

<tiles-definitions>

  <definition name="leiautePadrao"
    path="/WEB-INF/jsp/leiautePadrao.jsp">
    <put name="menu" value="/WEB-INF/jsp/menu.jsp" />
    <put name="tituloDaPagina" value="" />
    <!-- Através deste leiaute é possível fazer com que o
         implementador crie apenas o JSP de corpo e herde a estrutura
         de cabeçalho, menu e rodapé do leiaute padrão. -->
    <put name="corpo" value="" />
    <put name="rodape" value="/WEB-INF/jsp/rodape.jsp" />
  </definition>
  
  <definition name="usuarios.telaDeGestaoDeUsuarios" extends="leiautePadrao">
    <put name="tituloDaPagina" value="Usuários" />
    <put name="corpo" value="/WEB-INF/jsp/telaDeGestaoDeUsuarios.jsp" />
  </definition>

</tiles-definitions>